            tableButtons.innerHTML = `
                <button type="button" id="nextBtn" class="btn btn-green">Ø§Ù„ØªØ§Ù„ÙŠ</button>
                <button type="button" id="knowWhyBtn" class="btn btn-orange">Ø§Ø¹Ø±Ù Ù„Ù…Ø§Ø°Ø§ØŸ</button>
