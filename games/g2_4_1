            const GAME_MAX_POINTS = 25;               // Ø£Ù‚ØµÙ‰ Ù†Ù‚Ø§Ø· ÙÙŠ Ø§Ù„Ù„Ø¹Ø¨Ø© (5 Ù…Ù‡Ø§Ù… * 5 Ù†Ù‚Ø§Ø·)
            const PLATFORM_MAX_GRADE = 5;             // Ø§Ù„Ø¯Ø±Ø¬Ø© Ø§Ù„Ù†Ù‡Ø§Ø¦ÙŠØ© ÙÙŠ Ø§Ù„Ù…Ù†ØµØ©
